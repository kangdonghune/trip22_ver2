<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
    android:layout_width="wrap_content"
    android:layout_height="20sp"
    android:id="@+id/checkLo"
    android:text="location"
    android:textSize="10sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/condition_city"

    ></TextView>
   <Spinner
       android:id="@+id/condition_city"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:entries="@array/city"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/checkLang">
   </Spinner>

   <TextView
       android:id="@+id/checkLang"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Langauage :"
       android:layout_marginTop="20sp"
       android:textSize="10sp"
       app:layout_constraintBottom_toBottomOf="@id/Rgroup"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/Rgroup">

   </TextView>

   <RadioGroup
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="20sp"
      android:id="@+id/Rgroup"
       android:orientation="horizontal"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toTopOf="@id/Ask"
      >
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="English"
          android:textSize="15sp"
          android:id="@+id/condition_English"></RadioButton>
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:id="@+id/condition_Korean"
          android:textSize="15sp"
          android:text="Korean"></RadioButton>
      <RadioButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Chinese"
          android:textSize="15sp"
         android:id="@+id/condition_Chinese"></RadioButton>
   </RadioGroup>


   <ImageView
       android:id="@+id/Ask"
       android:layout_width="200sp"
       android:layout_height="200sp"
       android:src="@drawable/btn_q_ask"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.495"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.411" />

   <ImageView
       android:id="@+id/Find_Buddy"
       android:layout_width="120sp"
       android:layout_height="60sp"
       android:layout_marginTop="52dp"
       android:layout_marginBottom="118dp"
       android:src="@drawable/btn_findbuddy"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.497"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/Ask" />
</androidx.constraintlayout.widget.ConstraintLayout>