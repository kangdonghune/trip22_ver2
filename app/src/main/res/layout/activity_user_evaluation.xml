<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_title"
            android:gravity="center"
            android:text="Evaluation(평가)"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="30dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How about Accuracy?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/evaluation_star_title"
            android:layout_marginBottom="8dp">

        </TextView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/evaluation_accuracyStar">
            
        </RatingBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How about Speed?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/evaluation_secondstar_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">

        </TextView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/evaluation_speedStar">

        </RatingBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How about Kindness?"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15sp"
            android:id="@+id/evaluation_thirdstar_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">

        </TextView>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/evaluation_kindStar">

        </RatingBar>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:layout_below="@+id/evaluation_kindStar"
            android:id="@+id/text_field_boxes4"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_margin="25dp"
            app:hasFocus="false"
            app:rtl="true"
            app:labelText="Write Opinion"
            app:maxCharacters="200">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/evaluation_opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/PrimaryColor"
                android:hint="Please write your opinion freely" />

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="submit"
            android:layout_marginTop="10dp"
            android:id="@+id/evaluation_submit"></Button>


    </LinearLayout>


</ScrollView>