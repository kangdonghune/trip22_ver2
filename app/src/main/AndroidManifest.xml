<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lastplease">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Feed.DeleteFeedActivity"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".Setting.SettingQuestionActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Profile.respon_profile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Feed.FeedWriteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Feed.OtherProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile.question_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Feed.FeedDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Setting.SettingResponActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Main.QMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginRegiser.SelectActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginRegiser.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Feed.fullScreenImageViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_chat_image_viewer"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".utils.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="sensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginRegiser.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>