<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sw.HeyBuddy2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sw.HeyBuddy2.FindBuddy.SecondActivity"></activity>
        <activity
            android:name="com.sw.HeyBuddy2.Feed.DeleteFeedActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.sw.HeyBuddy2.Setting.SettingQuestionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Profile.respon_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Feed.FeedWriteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Feed.OtherProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Profile.question_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Feed.FeedDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Setting.SettingResponActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Main.QMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.LoginRegiser.SelectActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.LoginRegiser.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Feed.fullScreenImageViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_chat_image_viewer"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.sw.HeyBuddy2.utils.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="sensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sw.HeyBuddy2.LoginRegiser.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.sw.HeyBuddy2.Main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>